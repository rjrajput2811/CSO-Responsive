                    <div class="card-body text-center bg-white p-3 border-right">
                        <a>
                            <img id="imglogo" name="imglogo" src="~/images/wipro-logo.png" class="img-fluid  shadow-0 " alt="" />
                        </a>
                    </div>
                </div>
                <!-- /user menu -->
                <!-- Main navigation -->
